  <!--친구신청목록-->
<section class="page-section portfolio" id="result" style="padding-top: 150px; padding-bottom: 30px;">

    <div class="container">
    <table>
     <tbody>
      <tr>
        <td>  <h2 id="existing_friends"><%=@search_word %>로의 검색 결과(<%= @result.size %>명)</h2> </td>

        <td>
          <div class="custom-control custom-switch" >
          <input type="checkbox" class="custom-control-input" id="customSwitch1" checked>
          <!--&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
          <!--&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
          <!--&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
          <!--&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
          <label class="custom-control-label" for="customSwitch1">솔로친구만 보기</label>
          </div>
        </td>
      </tr>
     </tbody>
    </table>
    <br><br>

      <!-- Portfolio Grid Items -->
      <div class="row"  style="text-align: center;">

        <!-- Portfolio Item 1 -->
        <% if @result.exists?%>
          <% @result.each do |p| %>  
          <div class="col-md-6 col-lg-4">
            <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#result<%=p.owner_id%>">
              <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                <div class="portfolio-item-caption-content text-center text-white">
                  <i class="fas fa-plus fa-3x"></i>
                </div>
              </div>
              <p><%=p.name%>(<%=p.age%>살)</p>
              <!--<img class="img-fluid" src="img/portfolio/cabin.png" alt="">-->
              <% if p.profilepics? %>
                <%= image_tag(p.profilepics.url, class:'img-fluid profilepics', alt: "") %>
              <% else %>
                <img class="img-fluid profilepics" src="img/avataaars.svg" alt="">
              <% end %>
            </div>
          </div>
          <% end %>
        <% else %>
          아직 친구가 없네요! 친구신청을 해볼까요?
        <% end %>
    
      </div>
      <!-- /.row -->

    </div>
</section>
  <!--친구신청목록끝-->
  
    <!--친구데이터-->
    <% if @result.exists?%>
      <% @result.each do |p| %>
        <div class="portfolio-modal modal fade" id="friend<%=p.owner_id%>" tabindex="-1" role="dialog" aria-labelledby="friend<%=p.owner_id%>Label" aria-hidden="true">
          <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">
                  <i class="fas fa-times"></i>
                </span>
              </button>
              <div class="modal-body text-center">
                <div class="container">
                  <div class="row justify-content-center">
                    <div class="col-lg-8">
                      <!-- Portfolio Modal - Title -->
                      <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"><%=p.name%>님</h2>
                      <!-- Icon Divider -->
                      <div class="divider-custom">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon">
                          <i class="fas fa-star"></i>
                        </div>
                        <div class="divider-custom-line"></div>
                      </div>
                      <!-- Portfolio Modal - Image -->
                      <!--<img class="img-fluid rounded mb-5" src="img/portfolio/cabin.png" alt="">-->
                      <% if p.profilepics? %>
                        <%= image_tag(p.profilepics.url,  class:'img-fluid rounded mb-5 profilepics', alt: "") %>
                      <% else %>
                        <img class="img-fluid rounded mb-5 profilepics" src="img/avataaars.svg" alt="">
                      <% end %>
                      <!-- Portfolio Modal - Text -->
                      <p class="mb-5">저는 <%=p.age%>살 <%=p.name%>이라고 합니다.</p>
                      <p class="mb-5"><%=p.selfintroduction%></p>
                                     <button class="btn btn-warning" onclick="location.href='/posts/<%=p.owner_id%>' ">
                      <i class="fa fa-user" aria-hidden="true"></i>
                      상세 프로필 보기</button>
                      <button class="btn btn-primary" href="#" data-dismiss="modal">
                        <i class="fas fa-times fa-fw"></i>
                        프로필 닫기
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
    <% end %>
    <!--친구데이터 끝-->
  