<body>
	<div class="container h-100">
		<div class="d-flex justify-content-center h-100">
			<div class="user_card">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container" >
						<img src="https://cdn.freebiesupply.com/logos/large/2x/pinterest-circle-logo-png-transparent.png" class="brand_logo" alt="Logo">
					</div>
				</div>
				<div class="d-flex justify-content-center form_container" >
					  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text" ><i class="fas fa-user"></i></span>
							</div>
             <%= f.input :email, 
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } ,
                  placeholder: '이메일',
                  class: 'form-control input_user',
                  html: {autocomplete: 'off'}%>
						</div>
						<div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                placeholder: '비밀번호',
                class: "form-control input_pass"%>
						</div>
						<div class="form-group">
							<div class="custom-control custom-checkbox" >
								<%= f.label :remember_me, class: "custom-control-label", for: "customControlInline"%>
								<%= f.input :remember_me, class: "custom-control-input", id: "customControlInline", as: :boolean if devise_mapping.rememberable? %>
							</div>
						</div>
							<div class="d-flex justify-content-center mt-3 login_container" >
    				 	<button type="button" name="button" class="btn login_btn" ><%= f.button :submit, "로그인" %></button>
				   </div>
					<% end %>
				</div>
		
				<div class="mt-4">
					<div class="d-flex justify-content-center links">
          <%= render "devise/shared/links" %>

						Don't have an account? <a href="#" class="ml-2">Sign Up</a>
					</div>
					<div class="d-flex justify-content-center links">
						<a href="#">Forgot your password?</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>